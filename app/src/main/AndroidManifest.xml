                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".actions.FindRoots"
            android:label="@string/act_find_roots">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".actions.ElementOrder"
            android:label="@string/act_element_order">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".actions.SimpleOperations"
            android:label="@string/act_simple_operations">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>